<?xml version="1.0" encoding="UTF-8"?>
<project name="module_algs4" default="compile.module.algs4">
  <dirname property="module.algs4.basedir" file="${ant.file.module_algs4}"/>
  
  <property name="module.jdk.home.algs4" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.algs4" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.algs4" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.algs4" value="-encoding UTF-8 -source 1.6 ${compiler.args}"/>
  
  <property name="algs4.output.dir" value="undefined"/>
  <property name="algs4.testoutput.dir" value="undefined"/>
  
  <path id="algs4.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="algs4.module.production.classpath">
    <path refid="${module.jdk.classpath.algs4}"/>
    <path refid="library.stdlib.classpath"/>
    <path refid="library.algs4.classpath"/>
  </path>
  
  <path id="algs4.runtime.production.module.classpath">
    <path refid="library.stdlib.classpath"/>
    <path refid="library.algs4.classpath"/>
  </path>
  
  <path id="algs4.module.classpath">
    <path refid="${module.jdk.classpath.algs4}"/>
    <path refid="library.stdlib.classpath"/>
    <path refid="library.algs4.classpath"/>
  </path>
  
  <path id="algs4.runtime.module.classpath">
    <path refid="library.stdlib.classpath"/>
    <path refid="library.algs4.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.algs4">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.algs4">
    <patternset refid="excluded.from.module.algs4"/>
  </patternset>
  
  
  <target name="compile.module.algs4" depends="compile.module.algs4.production,compile.module.algs4.tests" description="Compile module algs4"/>
  
  <target name="compile.module.algs4.production" depends="register.custom.compilers" description="Compile module algs4; production classes"/>
  
  <target name="compile.module.algs4.tests" depends="register.custom.compilers,compile.module.algs4.production" description="compile module algs4; test classes" unless="skip.tests"/>
  
  <target name="clean.module.algs4" description="cleanup module">
    <delete dir="${algs4.output.dir}"/>
    <delete dir="${algs4.testoutput.dir}"/>
  </target>
</project>